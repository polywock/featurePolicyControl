{
  "name": "Simple Headers",
  "version": "0.4",
  "description": "Simple editor for response headers.",
  "manifest_version": 3,
  "host_permissions": ["https://*/*", "http://*/*"],
  "permissions": ["declarativeNetRequestWithHostAccess", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": { 
    "128": "icon128.png" 
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_ui": {
    "open_in_tab": true,
    "page": "options.html"
  }
}